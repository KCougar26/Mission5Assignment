@{
    ViewData["Title"] = "Tutor Calculator";
}

<h2>Book a Private Swing Lesson</h2>

<div class="card p-4" style="max-width: 400px;">
    <div class="form-group mb-3">
        <label>Hours of Lessons Needed:</label>
        <input type="number" id="hoursInput" class="form-control" placeholder="Enter hours (e.g. 2)" min="1">
    </div>

    <div class="form-group mb-3">
        <label>Hourly Rate ($):</label>
        <input type="text" id="rate" class="form-control" value="50" readonly>
    </div>

    <button id="btnCalc" class="btn btn-primary">Calculate Total Cost</button>

    <div class="mt-3">
        <label>Total Estimate:</label>
        <input type="text" id="totalOutput" class="form-control" readonly>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Home</a>

@section Scripts {
    <script src="~/js/calculator.js"></script>
}